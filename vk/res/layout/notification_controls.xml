<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


    <ImageView
            android:id="@+id/notification_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/yellow_headphones_1"/>


    <LinearLayout
            android:layout_toRightOf="@+id/notification_label"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


        <TextView
                android:gravity=""
                android:id="@+id/text_artist"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/notification_label"
                android:layout_toLeftOf="@+id/ll_controls"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:lines="2"
                android:layout_weight="1"
                />


        <LinearLayout
                android:layout_weight="2"
                android:id="@+id/ll_controls"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


            <ImageView
                    android:layout_weight="1"
                    android:id="@+id/play_stop_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="@drawable/btn_controls"
                    android:src="@drawable/btn_playback_pause_normal_jb_dark"
                    />

            <ImageView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:id="@+id/next_track_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_playback_ff_normal_jb_dark"
                    android:background="@drawable/btn_controls"
                    />


            <ImageView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:id="@+id/close_notification"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/status_bar_veto"
                    android:background="@drawable/btn_controls"
                    />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>