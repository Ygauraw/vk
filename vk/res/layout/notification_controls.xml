<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/ic_launcher"/>


    <TextView
            android:gravity="left|center"
            android:layout_weight="1"
            android:id="@+id/text_temp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="tratata\nsdfsdf"/>


    <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


        <ImageButton
                android:id="@+id/play_stop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOff=""
                android:textOn=""
                android:layout_gravity="center"
                android:background="@drawable/ic_play_stop"
                android:button="@null"
                />

        <ImageButton
                android:gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:id="@+id/next_track"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fwd_dark_tablet"
                android:background="@drawable/btn_controls"
                />


        <ImageButton
                android:gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:id="@+id/close_notification"
                android:layout_marginRight="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/status_bar_veto"
                android:background="@drawable/btn_controls"
                />


    </LinearLayout>

</LinearLayout>