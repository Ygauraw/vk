<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/darker_gray"
              android:orientation="vertical">

    <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    <TextView
            android:id="@+id/text_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

        <CheckBox
                android:background="@drawable/ic_menu_repeat"
                android:id="@+id/repeat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOff=""
                android:textOn=""
                android:button="@null"
                android:layout_gravity="center"
                android:checked="false"/>

        <ImageButton
                android:id="@+id/prev_track"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_rew_dark_tablet"
                android:background="@drawable/btn_controls"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                />

        <CheckBox
                android:id="@+id/play_stop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOff=""
                android:textOn=""
                android:layout_gravity="center"
                android:background="@drawable/ic_play_stop"
                android:button="@null"
                />

        <ImageButton
                android:gravity="center"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:id="@+id/next_track"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fwd_dark_tablet"
                android:background="@drawable/btn_controls"
                />

        <CheckBox
                android:background="@drawable/ic_menu_shuffle"
                android:button="@null"
                android:id="@+id/shuffle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOff=""
                android:textOn=""
                android:layout_gravity="center"
                />

    </LinearLayout>

</LinearLayout>