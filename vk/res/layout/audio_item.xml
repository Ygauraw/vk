<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:layout_toLeftOf="@+id/peak_meter_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_margin="5dp"
                android:id="@+id/music_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>


        <TextView
                android:id="@+id/music_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"/>


    </LinearLayout>

    <TextView
            android:id="@+id/music_duraion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="asc"
            android:gravity="center|bottom"
            android:textSize="10dp"
            android:layout_alignLeft="@+id/peak_meter_layout"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/peak_meter_layout"/>

    <LinearLayout
            android:id="@+id/peak_meter_layout"
            android:layout_toLeftOf="@+id/download"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        <ImageView
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:id="@+id/isActiveImage_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <ImageView
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:id="@+id/isActiveImage_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <ImageView
                android:focusable="false"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:id="@+id/isActiveImage_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

    </LinearLayout>


    <ImageView
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/download_icon_2"
            android:background="@drawable/btn_controls"
            android:layout_height="wrap_content"/>


</RelativeLayout>